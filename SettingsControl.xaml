<!-- SettingsControl.xaml -->
<UserControl x:Class="maorc287.RBRDataExtPlugin.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="260" MinHeight="140" Width="373">
    <StackPanel Margin="10">

        <TextBlock Text="Richard Burns Rally Additional Data - Settings"
                   FontWeight="Bold"
                   Margin="0,0,0,8"
                   Foreground="Crimson"
                   />

        <ToggleButton Content="Enable damage telemetry"
                  IsChecked="{Binding EnableDamage, Mode=TwoWay}" />

        <ToggleButton Content="Enable grip data"
                  IsChecked="{Binding EnableGrip, Mode=TwoWay}"
                  Margin="0,4,0,0" />

        <ToggleButton Content="Enable Delta Time"
                  IsChecked="{Binding EnableDelta, Mode=TwoWay}"
                  Margin="0,4,0,0" />

        <ToggleButton Content="Enable RBRHUD"
                  IsChecked="{Binding EnableExtras, Mode=TwoWay}"
                  Margin="0,4,0,0"
                   />
        
    </StackPanel>
</UserControl>
